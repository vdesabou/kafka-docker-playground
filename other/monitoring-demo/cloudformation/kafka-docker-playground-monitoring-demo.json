  "Resources" : {

    "MonitoringDemoInstance": {
      "Type": "AWS::EC2::Instance",
      "Metadata" : {
        "AWS::CloudFormation::Init" : {
          "configSets" : {
            "InstallAndRun" : [ "Install", "Configure" ]
          },

          "Install" : {
            "packages" : {
              "yum" : {
                "git"        : [],
                "docker"        : [],
                "zip"        : [],
                "expect"        : []
              }
            },

            "files" : {

              "/home/ec2-user/start.sh" : {
                "content" : { "Fn::Join" : [ "", [
                  "#!/bin/bash\nset -e\n\n# run as ec2-user\ncat << EOF | su ec2-user\n\ncd \ngit clone https://github.com/vdesabou/kafka-docker-playground.git\n\nexport CLOUDFORMATION=1;export PATH=/usr/local/bin:$PATH\ncd ~/kafka-docker-playground/other/monitoring-demo/\n./start.sh\n\n\nEOF"
                ]]},
                "mode"  : "000744",
                "owner" : "ec2-user",
                "group" : "ec2-user"
              },

              "/etc/cfn/cfn-hup.conf" : {
                "content" : { "Fn::Join" : ["", [
                  "[main]\n",
                  "stack=", { "Ref" : "AWS::StackId" }, "\n",
                  "region=", { "Ref" : "AWS::Region" }, "\n"
                ]]},
                "mode"    : "000400",
                "owner"   : "root",
                "group"   : "root"
              },

              "/etc/cfn/hooks.d/cfn-auto-reloader.conf" : {
                "content": { "Fn::Join" : ["", [
                  "[cfn-auto-reloader-hook]\n",
                  "triggers=post.update\n",
                  "path=Resources.MonitoringDemoInstance.Metadata.AWS::CloudFormation::Init\n",
                  "action=/opt/aws/bin/cfn-init -v ",
                  "         --stack ", { "Ref" : "AWS::StackName" },
                  "         --resource MonitoringDemoInstance ",
                  "         --configsets InstallAndRun ",
                  "         --region ", { "Ref" : "AWS::Region" }, "\n",
                  "runas=root\n"
                ]]},
                "mode"    : "000400",
                "owner"   : "root",
                "group"   : "root"
              }
            },

            "services" : {
              "sysvinit" : {
                "cfn-hup" : { "enabled" : "true", "ensureRunning" : "true",
                              "files" : ["/etc/cfn/cfn-hup.conf", "/etc/cfn/hooks.d/cfn-auto-reloader.conf"]}
              }
            }
          },

          "Configure" : {
            "commands": {
              "01update_pkgs": {
                  "command": "yum update -y"
              },
              "02start_docker": {
                "command": "service docker start && usermod -a -G docker ec2-user"
              },
              "03install_docker_compose": {
                  "command": "curl -L https://github.com/docker/compose/releases/latest/download/docker-compose-$(uname -s)-$(uname -m) -o /usr/local/bin/docker-compose && chmod +x /usr/local/bin/docker-compose"
              },
              "04increase-ulimit": {
                "command": "echo '* hard nofile 100000' | tee -a /etc/security/limits.conf;echo '* soft nofile 100000' | tee -a /etc/security/limits.conf;ulimit -n 100000"
              },
              "05start_demo": {
                  "command": "/home/ec2-user/start.sh > /home/ec2-user/output.log 2>&1"
              }
            }
          }
        }
      },
      "Properties": {
        "ImageId" : { "Fn::FindInMap" : [ "AWSRegionArch2AMI", { "Ref" : "AWS::Region" },
                          { "Fn::FindInMap" : [ "AWSInstanceType2Arch", { "Ref" : "InstanceType" }, "Arch" ] } ] },
        "InstanceType"   : { "Ref" : "InstanceType" },
        "SecurityGroups" : [ {"Ref" : "KafkaDockerPlaygroundSecurityGroup"} ],
        "KeyName"        : { "Ref" : "KeyName" },
        "BlockDeviceMappings": [
            {
                "DeviceName": "/dev/xvda",
                "Ebs": {
                    "DeleteOnTermination": "true",
                    "VolumeSize": {
                        "Ref": "Ec2RootVolumeSize"
                    }
                }
            }
        ],
        "UserData"       : { "Fn::Base64" : { "Fn::Join" : ["", [
             "#!/bin/bash -xe\n",
             "yum update -y aws-cfn-bootstrap\n",

             "# Install the files and packages from the metadata\n",
             "/opt/aws/bin/cfn-init -v ",
             "         --stack ", { "Ref" : "AWS::StackName" },
             "         --resource MonitoringDemoInstance ",
             "         --configsets InstallAndRun ",
             "         --region ", { "Ref" : "AWS::Region" }, "\n",

             "# Signal the status from cfn-init\n",
             "/opt/aws/bin/cfn-signal -e $? ",
             "         --stack ", { "Ref" : "AWS::StackName" },
             "         --resource MonitoringDemoInstance ",
             "         --region ", { "Ref" : "AWS::Region" }, "\n"
        ]]}}
      },
      "CreationPolicy" : {
        "ResourceSignal" : {
          "Timeout" : "PT30M"
        }
      }
    },

    "KafkaDockerPlaygroundSecurityGroup" : {
      "Type" : "AWS::EC2::SecurityGroup",
      "Properties" : {
        "GroupDescription" : "Enable SSH, Connect API, C3, Grafana and Prometheus access",
        "SecurityGroupIngress" : [
          {"IpProtocol" : "tcp", "FromPort" : "9021", "ToPort" : "9021", "CidrIp" : { "Ref" : "IPAddressRange"}},
          {"IpProtocol" : "tcp", "FromPort" : "3000", "ToPort" : "3000", "CidrIp" : { "Ref" : "IPAddressRange"}},
          {"IpProtocol" : "tcp", "FromPort" : "8083", "ToPort" : "8083", "CidrIp" : { "Ref" : "IPAddressRange"}},
          {"IpProtocol" : "tcp", "FromPort" : "8084", "ToPort" : "8084", "CidrIp" : { "Ref" : "IPAddressRange"}},
          {"IpProtocol" : "tcp", "FromPort" : "9090", "ToPort" : "9090", "CidrIp" : { "Ref" : "IPAddressRange"}},
          {"IpProtocol" : "tcp", "FromPort" : "22", "ToPort" : "22", "CidrIp" : { "Ref" : "IPAddressRange"}}
        ]
      }
    }
  },

